/*
Problem: Palindrome Linked List
Platform: LeetCode
Link: https://leetcode.com/problems/palindrome-linked-list
Category: Linked List

Time Complexity: O(n)
Space Complexity: O(1)
*/

#include <iostream>
using namespace std;
class Solution {
public:
    bool isPalindrome(ListNode* head) {
        if (head == NULL || head->next == NULL)
            return true;
        ListNode* slow = head;
        ListNode* fast = head;
        while (fast->next != NULL && fast->next->next != NULL) {
            slow = slow->next;
            fast = fast->next->next;
        }
        ListNode* prev = NULL;
        ListNode* curr = slow->next;
        ListNode* nextNode;
        while (curr != NULL) {
            nextNode = curr->next;
            curr->next = prev;
            prev = curr;
            curr = nextNode;
        }
        ListNode* first = head;
        ListNode* second = prev;
        bool palindrome = true;
        while (second != NULL) {
            if (first->val != second->val) {
                palindrome = false;
                break;
            }
            first = first->next;
            second = second->next;
        }
        curr = prev;
        prev = NULL;
        while (curr != NULL) {
            nextNode = curr->next;
            curr->next = prev;
            prev = curr;
            curr = nextNode;
        }
        slow->next = prev;
        return palindrome;
    }
};
